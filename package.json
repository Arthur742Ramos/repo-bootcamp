{
  "name": "repo-bootcamp",
  "version": "1.0.0",
  "description": "Turn any public GitHub repository into a Day 1 onboarding kit using GitHub Copilot SDK",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "bootcamp": "dist/index.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.json",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "github",
    "copilot",
    "onboarding",
    "documentation",
    "cli",
    "developer-tools",
    "bootcamp",
    "repository",
    "analyzer"
  ],
  "author": "Arthur Ramos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Arthur742Ramos/repo-bootcamp.git"
  },
  "homepage": "https://github.com/Arthur742Ramos/repo-bootcamp#readme",
  "bugs": {
    "url": "https://github.com/Arthur742Ramos/repo-bootcamp/issues"
  },
  "scripts": {
    "build": "tsc && npm run copy:data",
    "copy:data": "node --input-type=module -e \"import { cpSync } from 'node:fs'; cpSync('src/data','dist/data',{ recursive: true, force: true });\"",
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build && npm test"
  },
  "dependencies": {
    "@github/copilot-sdk": "^0.1.23",
    "chalk": "^5.3.0",
    "commander": "^14.0.3",
    "express": "^5.2.1",
    "ora": "^9.3.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
